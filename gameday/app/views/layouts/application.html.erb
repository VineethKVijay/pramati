<!DOCTYPE html>
<html>
  <head>
    <title>Gameday</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
  </head>

  <body>
    <nav class = "navbar navbar-expand-md navbar-dark bg-primary ">

      <a class = "navbar-brand padding_left" href="http://localhost:3000">gameday
      <%# <img src = "logo_white.png" alt="gameday-logo"/>  %>
      </a>
      <button class = "navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class = "navbar-toggler-icon"></span>
      </button>
      <% if logged_in %>
        <div class="dropdown ">
          <button type="button" class="btn btn-outline-dark dropdown-toggle " data-toggle="dropdown">
             <%= $current_user.name %>
          </button>
          <div class="dropdown-menu ">
            <%= link_to 'Edit user', user_path($current_user.id), method: :put, class: "dropdown-item" %>
            <%= link_to 'Delete Account', user_path($current_user.id),method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item" %>
            <%= link_to 'Logout', login_path($current_user.id),method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item" %>
          </div>
        </div>
      <% else %>
        <div class = " navbar-collapse" id="navbarsExampleDefault">
          <ul class = "navbar-nav ">
            <li class="nav-item login_style">
               <%= link_to 'Login', new_login_path, class: "btn btn-outline-dark" %>
            </li>
            <li class="nav-item">
              <%= link_to 'sign up', new_user_path, class: "btn btn-outline-dark" %>
              </div>
            </li>
          </ul>
        </div>
      <% end %>
    </nav> 

    <div class = "mt-4 container">
      <%= yield %>
    </div>
  </body>
</html>
