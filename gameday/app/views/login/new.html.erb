<h1>Login</h1>
<%= form_for :login, url: login_index_path do |f| %>

   <% if @login.errors.any? %>
    <% @login.errors.full_messages.each do |msg|%>
      <p class="alert alert-danger"><%= msg%></p>
    <% end %>
  <%end%>

  <p>
    <%= f.label :email %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", email: true %>
  </p>
  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </p>
  <p>
    <%= f.submit "Login"%>
  </p>
  <p>
    Not a part of Gameday Community? <%= link_to "Create an account", new_user_path %>
  </p>

<% end %>