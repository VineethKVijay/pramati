
<h5>Username: <%= @login.name %></h5>

<h4>Choose interest sports</h4>
<% if @login.errors.any? %>
  <% @login.errors.full_messages.each do |msg|%>
    <div class="alert alert-danger"> <%= msg%> </div>
  <% end %>
<%end%>

<form action="/interests"  method="post">
  <div class="form-row">
    <div class="form-group">
      <select class="form-control" id="sel1" name="option">
        <% $games.each do |game|%>
          <option name="<%= game.id %>"><%= game.name %></option>
        <% end %>
    </select>
    </div>
    <div class="col-12 col-md-3">
      <button type="submit" class="btn btn-block btn-primary">Add</button>
    </div>
  <%# <div>
    <%= link_to "Add", game_index_path %>
  <%# </div> %>
  </div>
</form>
