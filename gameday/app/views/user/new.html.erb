<h1>Sign Up</h1>
<%= form_for :user, url: user_index_path do |f| %>

  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |msg|%>
      <div class="alert alert-danger"> <%= msg%> </div>
    <% end %>
  <%end%>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name , autofocus: true, autocomplete: "name" %>
  </p>
  <p>
    <%= f.label :email %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", email: true %>
  </p>
  <p>
    <%= f.label :address%><br>
    <%= f.text_area :address, autofocus: true %>
  </p>
  <p>
    <%= f.label :phone_number %><br>
    <%= f.text_field :phone_number %>
  </p>
  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </p>
  <p>
    <%= f.submit "Sign up"%>
  </p>
  <p>
    Do you already have an account? <%= link_to "Login", new_login_path %>
  </p>
<% end %>