<% stadium = @stadium.find_by id: params[:id].to_i %>
<% $selected_stadium = stadium %>
<div class="container">
		<div class="card">
			<div class="container-fliud">
				<div class="wrapper row">

					<div class="preview col-md-6">
						<div class="preview-pic tab-content">
						  <div class="tab-pane active" id="pic-1"><img src="https://5.imimg.com/data5/TM/PR/MY-1515609/badminton-court-28-indoor-29-500x500.jpg" /></div>
						</div>
					</div>

					<div class="details col-md-6">
						<h3 class="product-title"><b><%= stadium.name %></b></h3>
						<p class="product-description"> <%= stadium.description %></p>
						<h5 class="price">current price: <span>Rs.<%= stadium.price_for_hour%> per/hour</span></h5>
            <p class="list-inline-item"><i class="btn-sm btn-danger disabled"><%= stadium.game %></i></p><br/>
						<p class="list-inline-item">Address :- <%= stadium.address %></p>
            <p class="list-inline-item">Contact number :- <%= stadium.contact_number %></p>
						<div class="action text-center">
							<% if $current_user.nil?%>
								<a href="/login/new" class="add-to-cart btn btn-primary">Book Slot</a>
							<%else%>
								<a href="/bookings/new" class="add-to-cart btn btn-primary">Book Slot</a>
							<%end%>
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>